{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "CommonJS",
    "outDir": "lib",
    "strict": true,
    "target": "es5",
    "lib": ["dom", "es5", "es6", "es7", "scripthost"],
    "allowJs": true,
    "paths": {
      "*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "test",
    "node_modules"
  ]
}